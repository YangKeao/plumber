WHITESPACE = _{ " " }
COMMENT = _{ "/*" ~ (!"*/" ~ ANY)* ~ "*/" }

definition_prefix = { ext }
    ext = {"extern"}

binary_operation = { "+" | "*" | "-" | "/" }

ident = @{ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_")* }

keywords = {"let" | "in"}

variable_name = @{ !keywords ~ ident }

function_call = {
    variable_name+
}

binary_expression = {
    variable_name ~ binary_operation ~ variable_name
}

expression = {
    binary_expression |
    function_call
}

binding = {
    variable_name ~ "=" ~ expression
}

local_binding = { "let" ~ (binding ~ "\n"? ~ "and")* ~ binding ~ "\n"? ~ "in" }

definition = { definition_prefix* ~ "let" ~ variable_name ~ variable_name* ~ "=" ~ "\n"? ~ local_binding? ~ "\n"? ~ expression }

statement = { definition }

program = _{ SOI ~ "\n"* ~ (statement ~ "\n"+)* ~ statement? ~ EOI }
